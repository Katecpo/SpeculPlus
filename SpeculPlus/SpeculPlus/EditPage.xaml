<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeculPlus.EditerElement">

        <StackLayout>

            <Label Text="SPECUL +" VerticalOptions="Start"
                HorizontalOptions="Center"
                TextColor="AntiqueWhite"/>

        <Image   
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="Center"
                HeightRequest="300"
                WidthRequest="300"/>

            <Grid VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" HeightRequest="100" WidthRequest="200">
                <Label Text="Nom : " HorizontalTextAlignment="Start"/>
                <Editor Text="Saisir Nom" HeightRequest="50" HorizontalOptions="Center" TextColor="AntiqueWhite"/>
                <Label Text="Prix : " HorizontalTextAlignment="Start" VerticalTextAlignment="Center" TextColor="AntiqueWhite"/>
            </Grid>


    </StackLayout>
    
</ContentPage>