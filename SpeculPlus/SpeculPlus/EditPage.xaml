<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeculPlus.EditPage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="SPECUL +" VerticalOptions="StartAndExpand"
                HorizontalOptions="CenterAndExpand"
                TextColor="DarkGray"/>

            <Image  Source=""
                    VerticalOptions="StartAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                    HeightRequest="300"
                    WidthRequest="300"/>

            <Grid VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" HeightRequest="100" WidthRequest="200">
                <Entry x:Name="name" Text="{Binding Name}" WidthRequest="300" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" TextColor="DarkGray"/>
                <Entry x:Name="price" Text="{Binding Price}" WidthRequest="300" HorizontalOptions="StartAndExpand" VerticalOptions="EndAndExpand" TextColor="DarkGray" />
            </Grid>

            <Grid VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" HeightRequest="100" WidthRequest="200">
                <Label Text="Catégorie" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" TextColor="DarkGray"/>
                <Picker x:Name="listCat" Title="Catégorie" VerticalOptions="CenterAndExpand" HeightRequest="80"/>
            </Grid>

            <Button Text="Terminé"
                    BackgroundColor="DarkGray"
                    Clicked="AddProduct_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>