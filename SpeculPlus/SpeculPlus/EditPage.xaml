<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeculPlus.EditerElement">

        <StackLayout>

            <Label Text="SPECUL +" VerticalOptions="Start"
                HorizontalOptions="Center"
                TextColor="AntiqueWhite"/>

            <Image  Source=""
                    VerticalOptions="Start" 
                    HorizontalOptions="Center"
                    HeightRequest="300"
                    WidthRequest="300"/>

            <Grid VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" HeightRequest="100" WidthRequest="200">
                <Entry Text="Nom" WidthRequest="300" HorizontalOptions="StartAndExpand" VerticalOptions="Start" TextColor="AntiqueWhite"/>
                <Entry Text="Prix" WidthRequest="300" HorizontalOptions="StartAndExpand" VerticalOptions="End" TextColor="AntiqueWhite" />
            </Grid>

            <Label Text="Catégorie" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>

            <Button Text="Ajouter un produit"
                    BackgroundColor="DarkGray"
                    Clicked="Button_Clicked"/>

    </StackLayout>
    
</ContentPage>